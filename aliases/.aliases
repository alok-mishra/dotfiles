alias tzc=tar_gz_compress
tar_gz_compress() { tar "$@" --exclude='*/node_modules' -cvzf ../${PWD##*/}_$(date +%Y%m%d-%H%M%S).tar.gz .; }
alias tzx=tar_gz_extract
tar_gz_extract() {
	if [ -z "$1" ]; then
		echo "Usage: tzx <filename.tar.gz>"
	else
		filename=$(basename -- "$1")
		directory="${filename%%.*}"
		mkdir -p "$directory" && tar -xvzf "$1" -C "$directory"
	fi
}

