# Check key is loaded in ssh-agent
ssh_key_loaded() {
	ssh-add -l | grep -q "$(ssh-keygen -lf "$1" | awk '{print $2}')"
}

# SSH agent forwarding
ssh_agent_forward() {
	local key_path="$1"
	local server="$2"

	# Start agent if not running
	if ! ssh-add -l >/dev/null 2>&1; then
		eval $(ssh-agent -s)
	fi

	# Check if key is loaded, if not try to add it
	if ! ssh_key_loaded "$key_path"; then
		ssh-add "$key_path"
	fi

	# Connect with agent forwarding
	ssh -A "$server"

	# Kill agent when done
	# ssh-agent -k
}

