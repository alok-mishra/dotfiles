alias type=smart_type # smart_type will either show the alias or the function definition
smart_type() {
	alias_command=$(alias "$1" 2>/dev/null)
	if [[ $alias_command == *"'"* ]]; then
		builtin type -f "$1"
	else
		function_name="${alias_command#*=}"
		builtin type -f "$function_name"
	fi
}

