alias pva='python_venv_activate'
python_venv_activate() {
  if [ -d venv ]; then
    echo "Activating existing venv/ environment"
    source venv/bin/activate
  elif [ -d .venv ]; then
    echo "Activating existing .venv/ environment"
    source .venv/bin/activate
  else
    echo "No venv found — creating .venv"
    python3 -m venv .venv
    source .venv/bin/activate
  fi
}

alias pvd='python_venv_deactivate'
python_venv_deactivate() {
  if declare -f deactivate >/dev/null; then
    echo "Deactivating virtual environment..."
    deactivate
  else
    echo "No active virtual environment."
  fi
}

