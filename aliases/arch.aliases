alias nmc='nmcli device wifi connect'
alias nmt='sudo nmtui connect'
alias nm6='sudo nmcli connection modify $1 ipv6.method ignore'

alias gncc='gnome-control-center &'

alias services='systemctl list-unit-files --state=enabled'

