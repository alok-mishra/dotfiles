alias pac='paru'       # pacman wrapper (AUR helper)
alias paci='pac -S'    # install a package
alias pacu='pac -Syu'  # sync / refresh repos, update packages
alias pacI='pac -Syu --ignore'  # sync / update, but ignore a package
alias pacr='pac -Runs' # remove package and dependencies not being used
alias pacR='pac -Rs'   # remove package and dependencies recursively
alias pacc='pac -Sc && pac -c && paccache -r'   # clear cache for packages not yet installed
alias pacs='pac -Qs'   # search packages installed
alias pacS='pac -s'    # search packages
alias pacq='pac -Qi'   # find packages dependant upon this
alias paco='pac -Qu'   # outdated packages list
# alias pack='pac-key --populate archlinux'   # populate the package signing keys
alias pack='pac -S archlinux-keyring'   # populate the package signing keys
alias pacg='gpg --recv-key' # add a missing public key

alias up='pacu'

alias vi3='vi ~/.config/i3/config'

alias pare='paru --sudoflags -E'

# alias code='code-insiders'

