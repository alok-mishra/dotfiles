# Windows Dotfiles Bootstrap

# /D (Directory Symbolic Link) - needs admin, but works across drives / WSL
# /J (Directory Junction) - doesn't need admin, but limited in capabilities


# git clone repo://dotfiles ~/.dotfiles
# git clone repo://nvim ~/.config/nvim

cmd <<< "mklink /D .config\wezterm ..\.dotfiles\.config\wezterm"

cmd <<< "mklink .bashrc .dotfiles\shell\.bashrc"
cmd <<< "mklink .zshrc .dotfiles\shell\.zshrc"
cmd <<< "mklink .p10k.zsh .dotfiles\shell\.p10k.zsh"
cmd <<< "mklink .bash_profile .dotfiles\shell\.bash_profile"
cmd <<< "mklink .minttyrc .dotfiles\shell\.minttyrc"
cmd <<< "mklink .gitconfig .dotfiles\git\.gitconfig"
cmd <<< "mklink .vimrc .dotfiles\vim\.vimrc"
