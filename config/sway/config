# Output configuration
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# You can get the names of your outputs by running: swaymsg -t get_outputs

# Default background for all outputs
output * bg ~/sync/settings/backgrounds/alena-aenami-lake.jpg fill

# High-DPI scaling - 4K at 150%
output WL-1 scale 1.5

# Input configuration
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# You can get the names of your inputs by running: swaymsg -t get_inputs
input type:touchpad {
    tap enabled
    natural_scroll enabled
}

# Startup
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# For screen sharing
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

# Notification daemon
exec mako

# Status bar
exec waybar

# WSL2 specific settings
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# Fix for applications that need D-Bus
exec dbus-daemon --session --address=unix:path=$XDG_RUNTIME_DIR/bus

# WSL2 has issues with XWayland socket permissions
# Disable XWayland since it's problematic in WSL2
xwayland disable

# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window
bindsym $mod+minus scratchpad show
