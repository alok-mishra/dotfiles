// https://zed.dev/docs/configuring-zed (`zed: open default settings`)

{
    ////// GENERAL //////
    "auto_update": false,
    "telemetry": {
        "diagnostics": false,
        "metrics": false,
    },

    ////// APPEARANCE //////
    "theme": "Gruvbox Dark Hard",
    "icon_theme": "Zed (Default)",
    "buffer_font_family": "CaskaydiaCove Nerd Font",
    "buffer_font_size": 12,
    "ui_font_size": 15,

    ////// KEYMAP //////
    "base_keymap": "VSCode",
    "vim_mode": true,

    ////// EDITOR //////
    "tab_size": 4,
    "file_types": {
        "Shell Script": ["*.aliases"],
    },

    ////// Search //////
    "use_smartcase_search": true,
    "search": {
        "center_on_match": true,
    },

    ////// Layout //////
    "tabs": {
        "file_icons": true,
        "git_status": true,
    },
    "project_panel": {
        "default_width": 220.0,
    },
    "git_panel": {
        "tree_view": true,
    },
    "session": {
        "trust_all_worktrees": true,
    },

    ////// AGENTS //////
    "agent_servers": {
        "github-copilot": {
            "type": "registry",
        },
    },

}
